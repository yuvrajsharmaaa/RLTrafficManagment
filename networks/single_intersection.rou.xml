<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- Vehicle types -->
    <vType id="car" accel="2.6" decel="4.5" sigma="0.5" length="5" minGap="2.5" maxSpeed="13.89" guiShape="passenger"/>
    
    <!-- Routes: through traffic -->
    <route id="north_south" edges="north_to_center center_to_south"/>
    <route id="south_north" edges="south_to_center center_to_north"/>
    <route id="east_west" edges="east_to_center center_to_west"/>
    <route id="west_east" edges="west_to_center center_to_east"/>
    
    <!-- Routes: turning traffic -->
    <route id="north_east" edges="north_to_center center_to_east"/>
    <route id="north_west" edges="north_to_center center_to_west"/>
    <route id="south_east" edges="south_to_center center_to_east"/>
    <route id="south_west" edges="south_to_center center_to_west"/>
    <route id="east_north" edges="east_to_center center_to_north"/>
    <route id="east_south" edges="east_to_center center_to_south"/>
    <route id="west_north" edges="west_to_center center_to_north"/>
    <route id="west_south" edges="west_to_center center_to_south"/>

    <!-- Peak hour traffic (0-1800s): higher volume -->
    <flow id="ns_peak" type="car" route="north_south" begin="0" end="1800" probability="0.12" departLane="random" departSpeed="max"/>
    <flow id="sn_peak" type="car" route="south_north" begin="0" end="1800" probability="0.12" departLane="random" departSpeed="max"/>
    <flow id="ew_peak" type="car" route="east_west" begin="0" end="1800" probability="0.08" departLane="random" departSpeed="max"/>
    <flow id="we_peak" type="car" route="west_east" begin="0" end="1800" probability="0.08" departLane="random" departSpeed="max"/>
    
    <!-- Turning traffic (peak) -->
    <flow id="ne_peak" type="car" route="north_east" begin="0" end="1800" probability="0.03" departLane="random" departSpeed="max"/>
    <flow id="nw_peak" type="car" route="north_west" begin="0" end="1800" probability="0.03" departLane="random" departSpeed="max"/>
    <flow id="se_peak" type="car" route="south_east" begin="0" end="1800" probability="0.03" departLane="random" departSpeed="max"/>
    <flow id="sw_peak" type="car" route="south_west" begin="0" end="1800" probability="0.03" departLane="random" departSpeed="max"/>
    <flow id="en_peak" type="car" route="east_north" begin="0" end="1800" probability="0.02" departLane="random" departSpeed="max"/>
    <flow id="es_peak" type="car" route="east_south" begin="0" end="1800" probability="0.02" departLane="random" departSpeed="max"/>
    <flow id="wn_peak" type="car" route="west_north" begin="0" end="1800" probability="0.02" departLane="random" departSpeed="max"/>
    <flow id="ws_peak" type="car" route="west_south" begin="0" end="1800" probability="0.02" departLane="random" departSpeed="max"/>

    <!-- Off-peak traffic (1800-3600s): moderate volume -->
    <flow id="ns_offpeak" type="car" route="north_south" begin="1800" end="3600" probability="0.06" departLane="random" departSpeed="max"/>
    <flow id="sn_offpeak" type="car" route="south_north" begin="1800" end="3600" probability="0.06" departLane="random" departSpeed="max"/>
    <flow id="ew_offpeak" type="car" route="east_west" begin="1800" end="3600" probability="0.04" departLane="random" departSpeed="max"/>
    <flow id="we_offpeak" type="car" route="west_east" begin="1800" end="3600" probability="0.04" departLane="random" departSpeed="max"/>
    
    <!-- Turning traffic (off-peak) -->
    <flow id="ne_offpeak" type="car" route="north_east" begin="1800" end="3600" probability="0.015" departLane="random" departSpeed="max"/>
    <flow id="nw_offpeak" type="car" route="north_west" begin="1800" end="3600" probability="0.015" departLane="random" departSpeed="max"/>
    <flow id="se_offpeak" type="car" route="south_east" begin="1800" end="3600" probability="0.015" departLane="random" departSpeed="max"/>
    <flow id="sw_offpeak" type="car" route="south_west" begin="1800" end="3600" probability="0.015" departLane="random" departSpeed="max"/>

</routes>
